    "version": "0.2.0",
   "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TypeScript",
      "program": "${workspaceFolder}/index.ts",  // Replace with the entry point of your app
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"  // Path to your compiled JavaScript files
      ],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--nolazy"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}